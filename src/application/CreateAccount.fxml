<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane style="-fx-background-color: #171717;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.CreateAccountController">
   <top>
      <AnchorPane prefHeight="56.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="181.0" text="Create Account" textFill="#ee3c3c">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </top>
   <left>
      <AnchorPane prefHeight="336.0" prefWidth="283.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="3.0" layoutY="41.0" text="first name:" textFill="#e85b5b" />
            <Label layoutX="2.0" layoutY="133.0" text="Account Type:" textFill="#e85b5b" />
            <Label layoutX="2.0" layoutY="87.0" text="last name: " textFill="#e85b5b" />
            <ChoiceBox fx:id="accountTypeChoiceBox" layoutX="96.0" layoutY="128.0" prefHeight="27.0" prefWidth="167.0" />
            <Label layoutX="4.0" layoutY="226.0" text="4-Digit Pin #:" textFill="#e85b5b" />
            <Label layoutX="2.0" layoutY="182.0" text="Username:" textFill="#e85b5b" />
            <TextField fx:id="firstNameTextfield" layoutX="96.0" layoutY="36.0" />
            <TextField fx:id="lastNameTextfield" layoutX="96.0" layoutY="82.0" />
            <TextField fx:id="createUsernameTextfield" layoutX="96.0" layoutY="177.0" />
            <PasswordField fx:id="createPinPasswordField" layoutX="96.0" layoutY="221.0" />
            <PasswordField fx:id="reEnterPasswordField" layoutX="96.0" layoutY="268.0" />
            <Label layoutX="4.0" layoutY="273.0" text="Re-enter Pin:" textFill="#e85b5b" />
         </children>
      </AnchorPane>
   </left>
   <bottom>
      <AnchorPane prefHeight="112.0" prefWidth="683.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="createAccountButton" layoutX="250.0" layoutY="1.0" mnemonicParsing="false" onAction="#createAccount" text="Create Account" />
            <Button fx:id="switchToLoginButton" layoutX="250.0" layoutY="85.0" mnemonicParsing="false" onAction="#switchToLogin" text="Click here to login" />
            <Label fx:id="createAccountErrorLabel" layoutX="161.0" layoutY="39.0" prefHeight="17.0" prefWidth="268.0" textFill="#ff0c0c" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
